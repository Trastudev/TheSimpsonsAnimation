<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/titleSimpsons"
        android:layout_width="367dp"
        android:layout_height="204dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/title_animation"/>

    <ImageView
        android:id="@+id/imgHomer"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSimpsons"
        app:srcCompat="@drawable/homer_simpson" />

    <ImageView
        android:id="@+id/imgUllHomer"
        android:layout_width="49dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="178dp"
        android:rotation="30"
        app:layout_constraintStart_toStartOf="@+id/imgHomer"
        app:layout_constraintTop_toTopOf="@+id/imgHomer"
        android:visibility="invisible"
        app:srcCompat="@drawable/ull" />

    <ImageView
        android:id="@+id/ivEngVermell"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="120dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/imgHomer"
        app:layout_constraintTop_toTopOf="@+id/imgHomer"
        app:srcCompat="@drawable/engranatge_vermell" />

    <ImageView
        android:id="@+id/ivEngBlau"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="130dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgHomer"
        app:layout_constraintTop_toTopOf="@+id/imgHomer"
        app:srcCompat="@drawable/engranatge_blau" />

    <ImageView
        android:id="@+id/ivEngVerd"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="64dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/imgHomer"
        app:layout_constraintTop_toTopOf="@+id/imgHomer"
        app:srcCompat="@drawable/engranatge_verd" />

    <ImageView
        android:id="@+id/imgDonut"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSimpsons"
        android:visibility="invisible"
        app:srcCompat="@drawable/donut" />


</androidx.constraintlayout.widget.ConstraintLayout>